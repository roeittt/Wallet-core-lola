{
  "name": "@okxweb3/coin-cardano",
  "version": "2.4.0",
  "description": "A Cardano SDK for building Web3 wallets and applications.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "run-s clean build:main",
    "build:main": "tsc -p tsconfig.json",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "prepublishOnly": "node ../../scripts/dep-version-check.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:ci": "jest --ci --coverage --coverageReporters=lcov --coverageReporters=text",
    "test:debug": "jest --detectOpenHandles --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/okx/js-wallet-sdk"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "cardano",
    "wallet",
    "web3",
    "crypto",
    "blockchain",
    "sdk",
    "transaction",
    "signing",
    "address",
    "private-key"
  ],
  "author": "okx",
  "license": "MIT",
  "files": [
    "dist",
    "patches"
  ],
  "devDependencies": {
    "patch-package": "^8.0.0"
  },
  "dependencies": {
    "@cardano-sdk/core": "0.45.8",
    "@cardano-sdk/crypto": "0.2.3",
    "@cardano-sdk/input-selection": "0.14.10",
    "@cardano-sdk/key-management": "0.27.9",
    "@cardano-sdk/tx-construction": "0.26.9",
    "@cardano-sdk/util": "0.16.0",
    "@okxweb3/coin-base": "2.0.3",
    "@okxweb3/crypto-lib": "2.0.5"
  }
}